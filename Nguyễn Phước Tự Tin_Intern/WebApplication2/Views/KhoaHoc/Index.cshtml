    body {
        font-family: Arial, sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .left, .right {
        border: 1px solid #ccc;
        padding: 10px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
    }

    .left {
        width: 70%;
    }

    .right {
        width: 25%;
    }

        .left h2, .right h2 {
            font-size: 18px;
            margin-bottom: 10px;
        }

    .left h2 {
        border-bottom: 2px solid #d4ff00;
        padding-bottom: 5px;
    }

    .right h2 {
        border-bottom: 2px solid #d4ff00;
        padding-bottom: 5px;
    }

    .left ul, .right ul {
        list-style-type: none;
        padding: 0;
    }

        .left ul li, .right ul li {
            margin: 5px 0;
        }

        .left ul li {
            display: inline-block;
            width: 45%;
        }

            .left ul li:nth-child(odd) {
                border-right: 1px solid #ccc;
                padding-right: 10px;
            }

        .right ul li a {
            text-decoration: none;
            color: #000;
        }

            .right ul li a:hover {
